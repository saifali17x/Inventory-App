<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= locals.title || 'Library Management System' %>
    </title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        // Library-themed color palette
                        'charcoal': '#1B1A17',
                        'espresso': '#201F1C',
                        'walnut': '#2C2A24',
                        'deep-walnut': '#2E2A27',
                        'antique-gold': '#A47E3B',
                        'parchment': '#C4A484',
                        'forest-green': '#3E6B48',
                        'sage-green': '#597B5A',
                        'warm-white': '#EDE6D9',
                        'aged-paper': '#B9B1A4',
                        'rust-red': '#A35746',
                        'clay-red': '#D97B66'
                    },
                    fontFamily: {
                        'serif': ['Georgia', 'Times New Roman', 'serif'],
                        'sans': ['Inter', 'system-ui', 'sans-serif']
                    },
                    boxShadow: {
                        'warm': '0 4px 20px rgba(164, 126, 59, 0.15)',
                        'book': '0 8px 32px rgba(44, 42, 36, 0.4)',
                        'shelf': 'inset 0 2px 4px rgba(164, 126, 59, 0.1)'
                    }
                }
            }
        }
    </script>
</head>

<body class="bg-charcoal text-warm-white font-serif min-h-screen">
    <!-- Library Header with Warm Lighting Effect -->
    <nav class="bg-espresso border-b-2 border-antique-gold sticky top-0 z-50 shadow-warm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4 py-4 lg:py-5">
                <!-- Logo -->
                <h1
                    class="text-warm-white text-xl sm:text-2xl lg:text-xl sm:text-2xl lg:text-3xl font-bold flex items-center gap-2 lg:gap-1 lg:gap-2 lg:p-3">
                    <i class="fas fa-book-open text-antique-gold text-base lg:text-lg sm:text-xl lg:text-2xl"></i>
                    <span class="font-serif hidden sm:inline">The Grand Library</span>
                    <span class="font-serif sm:hidden">Library</span>
                </h1>

                <!-- Mobile menu button -->
                <button id="mobile-menu-button"
                    class="md:hidden text-warm-white p-2 rounded-lg hover:bg-walnut transition-colors">
                    <i class="fas fa-bars text-xl"></i>
                </button>

                <!-- Desktop Navigation -->
                <ul class="hidden md:flex list-none gap-1 lg:gap-2">
                    <li><a href="/"
                            class="text-warm-white px-3 lg:px-5 py-2 lg:py-3 rounded-lg hover:bg-walnut hover:text-antique-gold transition-all duration-300 font-medium text-sm lg:text-base text-xs lg:text-xs lg:text-sm tracking-wide uppercase border border-transparent hover:border-antique-gold/30">
                            <i class="fas fa-tachometer-alt mr-1 lg:mr-2"></i><span
                                class="hidden lg:inline">Dashboard</span><span class="lg:hidden">Home</span></a></li>
                    <li><a href="/books"
                            class="text-warm-white px-3 lg:px-5 py-2 lg:py-3 rounded-lg hover:bg-walnut hover:text-antique-gold transition-all duration-300 font-medium text-sm lg:text-base text-xs lg:text-xs lg:text-sm tracking-wide uppercase border border-transparent hover:border-antique-gold/30">
                            <i class="fas fa-book mr-1 lg:mr-2"></i>Books</a></li>
                    <li><a href="/authors"
                            class="text-warm-white px-3 lg:px-5 py-2 lg:py-3 rounded-lg hover:bg-walnut hover:text-antique-gold transition-all duration-300 font-medium text-sm lg:text-base text-xs lg:text-xs lg:text-sm tracking-wide uppercase border border-transparent hover:border-antique-gold/30">
                            <i class="fas fa-feather mr-1 lg:mr-2"></i>Authors</a></li>
                    <li><a href="/categories"
                            class="text-warm-white px-3 lg:px-5 py-2 lg:py-3 rounded-lg hover:bg-walnut hover:text-antique-gold transition-all duration-300 font-medium text-sm lg:text-base text-xs lg:text-xs lg:text-sm tracking-wide uppercase border border-transparent hover:border-antique-gold/30">
                            <i class="fas fa-tags mr-1 lg:mr-2"></i><span
                                class="hidden xl:inline">Categories</span><span class="xl:hidden">Cats</span></a></li>
                    <li><a href="/members"
                            class="text-warm-white px-3 lg:px-5 py-2 lg:py-3 rounded-lg hover:bg-walnut hover:text-antique-gold transition-all duration-300 font-medium text-sm lg:text-base text-xs lg:text-xs lg:text-sm tracking-wide uppercase border border-transparent hover:border-antique-gold/30">
                            <i class="fas fa-users mr-1 lg:mr-2"></i>Members</a></li>
                </ul>
            </div>

            <!-- Mobile Navigation -->
            <div id="mobile-menu" class="md:hidden hidden bg-walnut border-t border-antique-gold/30 py-4">
                <ul class="flex flex-col space-y-2">
                    <li><a href="/"
                            class="block text-warm-white px-3 lg:px-4 py-2 lg:py-3 rounded-lg hover:bg-deep-walnut hover:text-antique-gold transition-all duration-300 font-medium text-sm lg:text-base text-xs lg:text-sm tracking-wide uppercase">
                            <i class="fas fa-tachometer-alt mr-3"></i>Dashboard</a></li>
                    <li><a href="/books"
                            class="block text-warm-white px-3 lg:px-4 py-2 lg:py-3 rounded-lg hover:bg-deep-walnut hover:text-antique-gold transition-all duration-300 font-medium text-sm lg:text-base text-xs lg:text-sm tracking-wide uppercase">
                            <i class="fas fa-book mr-3"></i>Books</a></li>
                    <li><a href="/authors"
                            class="block text-warm-white px-3 lg:px-4 py-2 lg:py-3 rounded-lg hover:bg-deep-walnut hover:text-antique-gold transition-all duration-300 font-medium text-sm lg:text-base text-xs lg:text-sm tracking-wide uppercase">
                            <i class="fas fa-feather mr-3"></i>Authors</a></li>
                    <li><a href="/categories"
                            class="block text-warm-white px-3 lg:px-4 py-2 lg:py-3 rounded-lg hover:bg-deep-walnut hover:text-antique-gold transition-all duration-300 font-medium text-sm lg:text-base text-xs lg:text-sm tracking-wide uppercase">
                            <i class="fas fa-tags mr-3"></i>Categories</a></li>
                    <li><a href="/members"
                            class="block text-warm-white px-3 lg:px-4 py-2 lg:py-3 rounded-lg hover:bg-deep-walnut hover:text-antique-gold transition-all duration-300 font-medium text-sm lg:text-base text-xs lg:text-sm tracking-wide uppercase">
                            <i class="fas fa-users mr-3"></i>Members</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content with Book Shelf Aesthetic -->
    <main class="min-h-screen py-6 sm:py-8 lg:py-12 bg-gradient-to-b from-charcoal to-espresso">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <%- body %>
        </div>
    </main>

    <!-- Library Footer -->
    <footer class="bg-deep-walnut border-t-2 border-antique-gold text-center py-6 lg:py-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-center gap-2 lg:gap-1 lg:gap-2 lg:p-3 mb-3 lg:mb-4">
                <i class="fas fa-book text-antique-gold text-xs lg:text-sm lg:text-base"></i>
                <span class="text-parchment font-serif text-base lg:text-base lg:text-lg">The Grand Library</span>
                <i class="fas fa-book text-antique-gold text-xs lg:text-sm lg:text-base"></i>
            </div>
            <p class="text-aged-paper text-xs lg:text-sm lg:text-base">&copy; 2025 Library Management System. Built by
                Saif Ali.</p>
            <p class="text-aged-paper/70 text-xs lg:text-xs lg:text-sm mt-1 lg:mt-2">Preserving knowledge, one book at a
                time.</p>
        </div>
    </footer>

    <script>
        // Simple confirmation for delete actions
        function confirmDelete(message) {
            return confirm(message || 'Are you sure you want to delete this item?');
        }

        // Mobile menu toggle
        document.addEventListener('DOMContentLoaded', function () {
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');

            if (mobileMenuButton && mobileMenu) {
                mobileMenuButton.addEventListener('click', function () {
                    mobileMenu.classList.toggle('hidden');

                    // Toggle icon between bars and times
                    const icon = mobileMenuButton.querySelector('i');
                    if (mobileMenu.classList.contains('hidden')) {
                        icon.className = 'fas fa-bars text-xl';
                    } else {
                        icon.className = 'fas fa-times text-xl';
                    }
                });

                // Close mobile menu when clicking on a link
                const mobileLinks = mobileMenu.querySelectorAll('a');
                mobileLinks.forEach(link => {
                    link.addEventListener('click', function () {
                        mobileMenu.classList.add('hidden');
                        const icon = mobileMenuButton.querySelector('i');
                        icon.className = 'fas fa-bars text-xl';
                    });
                });
            }
        });
    </script>
</body>

</html>