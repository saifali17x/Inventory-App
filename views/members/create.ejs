<!-- Member Registration Form -->
<div class="mb-8 lg:mb-12">
    <!-- Manuscript Header -->
    <div class="text-center mb-8 lg:mb-8 lg:mb-12 relative">
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-antique-gold/20 to-transparent h-px top-1/2">
        </div>
        <div class="relative bg-charcoal px-4 sm:px-6 lg:px-8 inline-block">
            <h1 class="text-warm-white text-2xl sm:text-3xl lg:text-2xl lg:text-4xl font-bold mb-2 lg:mb-4 font-serif tracking-wider">
                <i class="fas fa-address-card text-antique-gold mr-2 lg:mr-4"></i>
                Register New Reader
                <i class="fas fa-address-card text-antique-gold ml-2 lg:ml-4"></i>
            </h1>
            <p class="text-parchment text-xs lg:text-sm sm:text-base lg:text-base lg:text-lg italic">Welcome a new scholar to the library</p>
        </div>
    </div>

    <!-- Navigation -->
    <div class="mb-8">
        <a href="/members"
            class="inline-flex items-center justify-center gap-2 lg:gap-1 lg:gap-2 lg:p-3 px-4 py-2 bg-deep-walnut text-aged-paper rounded-lg hover:bg-walnut transition-all duration-200 hover:-translate-y-0.5 border border-antique-gold/30">
            <i class="fas fa-arrow-left"></i>
            <span class="font-serif">Return to Readers Registry</span>
        </a>
    </div>

    <% if (locals.error) { %>
        <div class="bg-clay-red/10 border border-clay-red/30 text-clay-red p-4 rounded-lg lg:rounded-xl mb-8 flex items-center gap-1 lg:gap-2 lg:p-3">
            <i class="fas fa-scroll text-xl"></i>
            <span class="font-serif">
                <%= error %>
            </span>
        </div>
        <% } %>

            <!-- Registration Parchment -->
            <div class="bg-walnut rounded-xl lg:rounded-2xl shadow-book border-2 border-antique-gold/30 overflow-hidden">
                <div
                    class="bg-gradient-to-r from-antique-gold/20 via-parchment/10 to-antique-gold/20 px-4 lg:px-4 lg:px-6 py-2 lg:py-3 lg:py-4 border-b border-antique-gold/30">
                    <h2 class="text-warm-white font-serif font-bold text-xl flex items-center gap-2">
                        <i class="fas fa-scroll text-antique-gold"></i>
                        Reader Registration Form
                    </h2>
                </div>

                <form method="POST" action="/members/create" class="p-4 sm:p-6 lg:p-8">
                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-1 lg:gap-2 lg:p-3 sm:gap-4 lg:gap-6">
                        <!-- Personal Information -->
                        <div class="space-y-6">
                            <div>
                                <label for="first_name"
                                    class="block text-parchment font-serif mb-2 text-xs lg:text-sm uppercase tracking-wider">
                                    Given Name <span class="text-clay-red">*</span>
                                </label>
                                <input type="text" id="first_name" name="first_name"
                                    value="<%= locals.formData?.first_name || '' %>" required
                                    class="w-full px-3 lg:px-4 py-2 lg:py-3 bg-deep-walnut border border-antique-gold/30 rounded-lg text-warm-white font-serif focus:border-antique-gold focus:ring-1 focus:ring-antique-gold/30 focus:outline-none transition-all duration-200">
                            </div>

                            <div>
                                <label for="last_name"
                                    class="block text-parchment font-serif mb-2 text-xs lg:text-sm uppercase tracking-wider">
                                    Family Name <span class="text-clay-red">*</span>
                                </label>
                                <input type="text" id="last_name" name="last_name"
                                    value="<%= locals.formData?.last_name || '' %>" required
                                    class="w-full px-3 lg:px-4 py-2 lg:py-3 bg-deep-walnut border border-antique-gold/30 rounded-lg text-warm-white font-serif focus:border-antique-gold focus:ring-1 focus:ring-antique-gold/30 focus:outline-none transition-all duration-200">
                            </div>

                            <div>
                                <label for="email"
                                    class="block text-parchment font-serif mb-2 text-xs lg:text-sm uppercase tracking-wider">
                                    Correspondence Address <span class="text-clay-red">*</span>
                                </label>
                                <input type="email" id="email" name="email" value="<%= locals.formData?.email || '' %>"
                                    required
                                    class="w-full px-3 lg:px-4 py-2 lg:py-3 bg-deep-walnut border border-antique-gold/30 rounded-lg text-warm-white font-serif focus:border-antique-gold focus:ring-1 focus:ring-antique-gold/30 focus:outline-none transition-all duration-200">
                            </div>

                            <div>
                                <label for="phone"
                                    class="block text-parchment font-serif mb-2 text-xs lg:text-sm uppercase tracking-wider">
                                    Communication Line
                                </label>
                                <input type="tel" id="phone" name="phone" value="<%= locals.formData?.phone || '' %>"
                                    class="w-full px-3 lg:px-4 py-2 lg:py-3 bg-deep-walnut border border-antique-gold/30 rounded-lg text-warm-white font-serif focus:border-antique-gold focus:ring-1 focus:ring-antique-gold/30 focus:outline-none transition-all duration-200">
                            </div>
                        </div>

                        <!-- Membership Details -->
                        <div class="space-y-6">
                            <div>
                                <label for="address"
                                    class="block text-parchment font-serif mb-2 text-xs lg:text-sm uppercase tracking-wider">
                                    Dwelling Address
                                </label>
                                <textarea id="address" name="address" rows="3"
                                    class="w-full px-3 lg:px-4 py-2 lg:py-3 bg-deep-walnut border border-antique-gold/30 rounded-lg text-warm-white font-serif focus:border-antique-gold focus:ring-1 focus:ring-antique-gold/30 focus:outline-none transition-all duration-200 resize-none"><%= locals.formData?.address || '' %></textarea>
                            </div>

                            <div>
                                <label for="membership_type"
                                    class="block text-parchment font-serif mb-2 text-xs lg:text-sm uppercase tracking-wider">
                                    Scholar Classification
                                </label>
                                <select id="membership_type" name="membership_type"
                                    class="w-full px-3 lg:px-4 py-2 lg:py-3 bg-deep-walnut border border-antique-gold/30 rounded-lg text-warm-white font-serif focus:border-antique-gold focus:ring-1 focus:ring-antique-gold/30 focus:outline-none transition-all duration-200">
                                    <option value="Public" <%=(locals.formData?.membership_type==='Public' )
                                        ? 'selected' : '' %>>General Public</option>
                                    <option value="Student" <%=(locals.formData?.membership_type==='Student' )
                                        ? 'selected' : '' %>>Student Scholar</option>
                                    <option value="Faculty" <%=(locals.formData?.membership_type==='Faculty' )
                                        ? 'selected' : '' %>>Faculty Member</option>
                                </select>
                            </div>

                            <div>
                                <label for="membership_date"
                                    class="block text-parchment font-serif mb-2 text-xs lg:text-sm uppercase tracking-wider">
                                    Registration Date
                                </label>
                                <input type="date" id="membership_date" name="membership_date"
                                    value="<%= locals.formData?.membership_date || new Date().toISOString().split('T')[0] %>"
                                    class="w-full px-3 lg:px-4 py-2 lg:py-3 bg-deep-walnut border border-antique-gold/30 rounded-lg text-warm-white font-serif focus:border-antique-gold focus:ring-1 focus:ring-antique-gold/30 focus:outline-none transition-all duration-200">
                            </div>
                        </div>
                    </div>

                    <!-- Registration Actions -->
                    <div
                        class="flex flex-col sm:flex-row gap-4 justify-center pt-8 border-t border-antique-gold/20 mt-8">
                        <button type="submit"
                            class="inline-flex items-center justify-center gap-1 lg:gap-2 lg:p-3 px-6 lg:px-8 py-3 lg:py-4 bg-antique-gold text-espresso rounded-lg lg:rounded-xl font-bold font-serif hover:bg-parchment transition-all duration-300 shadow-warm hover:-translate-y-1">
                            <i class="fas fa-scroll"></i>
                            Register Reader
                        </button>
                        <a href="/members"
                            class="inline-flex items-center justify-center gap-1 lg:gap-2 lg:p-3 px-6 lg:px-8 py-3 lg:py-4 bg-deep-walnut text-aged-paper border border-antique-gold/30 rounded-lg lg:rounded-xl font-serif hover:bg-walnut transition-all duration-200">
                            <i class="fas fa-times"></i>
                            Abandon Registration
                        </a>
                    </div>
                </form>
            </div>
</div>