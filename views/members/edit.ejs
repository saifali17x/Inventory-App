<!-- Reader Amendment Form -->
<div class="mb-12">
    <!-- Manuscript Header -->
    <div class="text-center mb-12 relative">
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-antique-gold/20 to-transparent h-px top-1/2">
        </div>
        <div class="relative bg-charcoal px-8 inline-block">
            <h1 class="text-warm-white text-3xl font-bold mb-4 font-serif tracking-wider">
                <i class="fas fa-user-edit text-antique-gold mr-4"></i>
                Amend: <%= member.first_name %>
                    <%= member.last_name %>
                        <i class="fas fa-user-edit text-antique-gold ml-4"></i>
            </h1>
            <p class="text-parchment text-lg italic">Revise the reader's registry</p>
        </div>
    </div>

    <!-- Navigation -->
    <div class="mb-8">
        <a href="/members/<%= member.member_id %>"
            class="inline-flex items-center gap-3 px-4 py-2 bg-deep-walnut text-aged-paper rounded-lg hover:bg-walnut transition-all duration-200 hover:-translate-y-0.5 border border-antique-gold/30">
            <i class="fas fa-arrow-left"></i>
            <span class="font-serif">Return to Reader</span>
        </a>
    </div>

    <% if (locals.error) { %>
        <div class="bg-clay-red/10 border border-clay-red/30 text-clay-red p-4 rounded-xl mb-8 flex items-center gap-3">
            <i class="fas fa-scroll text-xl"></i>
            <span class="font-serif">
                <%= error %>
            </span>
        </div>
        <% } %>

            <!-- Amendment Parchment -->
            <div class="bg-walnut rounded-2xl shadow-book border-2 border-antique-gold/30 overflow-hidden">
                <div
                    class="bg-gradient-to-r from-antique-gold/20 via-parchment/10 to-antique-gold/20 px-6 py-4 border-b border-antique-gold/30">
                    <h2 class="text-warm-white font-serif font-bold text-xl flex items-center gap-2">
                        <i class="fas fa-scroll text-antique-gold"></i>
                        Amendment Form
                    </h2>
                </div>

                <form method="POST" action="/members/<%= member.member_id %>/edit" class="p-8">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Personal Information -->
                        <div class="space-y-6">
                            <div>
                                <label for="first_name"
                                    class="block text-parchment font-serif mb-2 text-sm uppercase tracking-wider">
                                    Given Name <span class="text-clay-red">*</span>
                                </label>
                                <input type="text" id="first_name" name="first_name" value="<%= member.first_name %>"
                                    required
                                    class="w-full px-4 py-3 bg-deep-walnut border border-antique-gold/30 rounded-lg text-warm-white font-serif focus:border-antique-gold focus:ring-1 focus:ring-antique-gold/30 focus:outline-none transition-all duration-200">
                            </div>

                            <div>
                                <label for="last_name"
                                    class="block text-parchment font-serif mb-2 text-sm uppercase tracking-wider">
                                    Family Name <span class="text-clay-red">*</span>
                                </label>
                                <input type="text" id="last_name" name="last_name" value="<%= member.last_name %>"
                                    required
                                    class="w-full px-4 py-3 bg-deep-walnut border border-antique-gold/30 rounded-lg text-warm-white font-serif focus:border-antique-gold focus:ring-1 focus:ring-antique-gold/30 focus:outline-none transition-all duration-200">
                            </div>

                            <div>
                                <label for="email"
                                    class="block text-parchment font-serif mb-2 text-sm uppercase tracking-wider">
                                    Correspondence Address <span class="text-clay-red">*</span>
                                </label>
                                <input type="email" id="email" name="email" value="<%= member.email %>" required
                                    class="w-full px-4 py-3 bg-deep-walnut border border-antique-gold/30 rounded-lg text-warm-white font-serif focus:border-antique-gold focus:ring-1 focus:ring-antique-gold/30 focus:outline-none transition-all duration-200">
                            </div>

                            <div>
                                <label for="phone"
                                    class="block text-parchment font-serif mb-2 text-sm uppercase tracking-wider">
                                    Communication Line
                                </label>
                                <input type="tel" id="phone" name="phone" value="<%= member.phone || '' %>"
                                    class="w-full px-4 py-3 bg-deep-walnut border border-antique-gold/30 rounded-lg text-warm-white font-serif focus:border-antique-gold focus:ring-1 focus:ring-antique-gold/30 focus:outline-none transition-all duration-200">
                            </div>
                        </div>

                        <!-- Membership Details -->
                        <div class="space-y-6">
                            <div>
                                <label for="address"
                                    class="block text-parchment font-serif mb-2 text-sm uppercase tracking-wider">
                                    Dwelling Address
                                </label>
                                <textarea id="address" name="address" rows="3"
                                    class="w-full px-4 py-3 bg-deep-walnut border border-antique-gold/30 rounded-lg text-warm-white font-serif focus:border-antique-gold focus:ring-1 focus:ring-antique-gold/30 focus:outline-none transition-all duration-200 resize-none"><%= member.address || '' %></textarea>
                            </div>

                            <div>
                                <label for="membership_type"
                                    class="block text-parchment font-serif mb-2 text-sm uppercase tracking-wider">
                                    Scholar Classification
                                </label>
                                <select id="membership_type" name="membership_type"
                                    class="w-full px-4 py-3 bg-deep-walnut border border-antique-gold/30 rounded-lg text-warm-white font-serif focus:border-antique-gold focus:ring-1 focus:ring-antique-gold/30 focus:outline-none transition-all duration-200">
                                    <option value="Public" <%=(member.membership_type==='Public' ) ? 'selected' : '' %>
                                        >General Public</option>
                                    <option value="Student" <%=(member.membership_type==='Student' ) ? 'selected' : ''
                                        %>>Student Scholar</option>
                                    <option value="Faculty" <%=(member.membership_type==='Faculty' ) ? 'selected' : ''
                                        %>>Faculty Member</option>
                                </select>
                            </div>

                            <div>
                                <label for="membership_date"
                                    class="block text-parchment font-serif mb-2 text-sm uppercase tracking-wider">
                                    Registration Date
                                </label>
                                <input type="date" id="membership_date" name="membership_date"
                                    value="<%= member.membership_date ? new Date(member.membership_date).toISOString().split('T')[0] : '' %>"
                                    class="w-full px-4 py-3 bg-deep-walnut border border-antique-gold/30 rounded-lg text-warm-white font-serif focus:border-antique-gold focus:ring-1 focus:ring-antique-gold/30 focus:outline-none transition-all duration-200">
                            </div>

                            <div>
                                <label for="status"
                                    class="block text-parchment font-serif mb-2 text-sm uppercase tracking-wider">
                                    Registry Status
                                </label>
                                <select id="status" name="status"
                                    class="w-full px-4 py-3 bg-deep-walnut border border-antique-gold/30 rounded-lg text-warm-white font-serif focus:border-antique-gold focus:ring-1 focus:ring-antique-gold/30 focus:outline-none transition-all duration-200">
                                    <option value="Active" <%=(member.status==='Active' ) ? 'selected' : '' %>>Active
                                    </option>
                                    <option value="Inactive" <%=(member.status==='Inactive' ) ? 'selected' : '' %>
                                        >Inactive</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <!-- Amendment Actions -->
                    <div
                        class="flex flex-col sm:flex-row gap-4 justify-center pt-8 border-t border-antique-gold/20 mt-8">
                        <button type="submit"
                            class="inline-flex items-center justify-center gap-3 px-8 py-4 bg-antique-gold text-espresso rounded-xl font-bold font-serif hover:bg-parchment transition-all duration-300 shadow-warm hover:-translate-y-1">
                            <i class="fas fa-scroll"></i>
                            Save Amendments
                        </button>
                        <a href="/members/<%= member.member_id %>"
                            class="inline-flex items-center justify-center gap-3 px-8 py-4 bg-deep-walnut text-aged-paper border border-antique-gold/30 rounded-xl font-serif hover:bg-walnut transition-all duration-200">
                            <i class="fas fa-times"></i>
                            Discard Changes
                        </a>
                    </div>
                </form>
            </div>
</div>