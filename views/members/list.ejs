<!-- Readers Registry -->
<div class="mb-12">
    <!-- Elegant Header with Manuscript Style -->
    <div class="text-center mb-12 relative">
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-antique-gold/20 to-transparent h-px top-1/2">
        </div>
        <div class="relative bg-charcoal px-8 inline-block">
            <h1 class="text-warm-white text-4xl font-bold mb-4 font-serif tracking-wider">
                <i class="fas fa-address-book text-antique-gold mr-4"></i>
                Readers Registry
                <i class="fas fa-address-book text-antique-gold ml-4"></i>
            </h1>
            <p class="text-parchment text-lg italic">Scholars & Seekers of Knowledge</p>
        </div>
    </div>

    <!-- Action Bar -->
    <div class="flex justify-between items-center mb-8">
        <div class="text-aged-paper font-serif">
            <i class="fas fa-users mr-2 text-antique-gold"></i>
            <span class="text-lg">
                <%= members.length %> readers registered
            </span>
        </div>
        <a href="/members/create"
            class="inline-flex items-center gap-3 px-6 py-3 bg-antique-gold text-espresso rounded-xl font-bold font-serif hover:bg-parchment hover:-translate-y-1 transition-all duration-300 shadow-warm">
            <i class="fas fa-user-plus"></i>
            Register New Reader
        </a>
    </div>

    <% if (members.length> 0) { %>
        <!-- Elegant Readers Registry Table -->
        <div class="bg-walnut rounded-2xl shadow-book border-2 border-antique-gold/30 overflow-hidden">
            <div
                class="bg-gradient-to-r from-antique-gold/20 via-parchment/10 to-antique-gold/20 px-6 py-4 border-b border-antique-gold/30">
                <h2 class="text-warm-white font-serif font-bold text-xl flex items-center gap-2">
                    <i class="fas fa-address-book text-antique-gold"></i>
                    Registry Records
                </h2>
            </div>

            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="bg-deep-walnut border-b border-antique-gold/20">
                            <th class="text-left py-5 px-6 text-parchment font-serif font-semibold">Reader Name</th>
                            <th class="text-left py-5 px-4 text-parchment font-serif font-semibold">Correspondence</th>
                            <th class="text-left py-5 px-4 text-parchment font-serif font-semibold">Communication</th>
                            <th class="text-left py-5 px-4 text-parchment font-serif font-semibold">Scholar Type</th>
                            <th class="text-left py-5 px-4 text-parchment font-serif font-semibold">Status</th>
                            <th class="text-center py-5 px-4 text-parchment font-serif font-semibold">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-antique-gold/10">
                        <% members.forEach(member=> { %>
                            <tr class="hover:bg-deep-walnut/50 transition-all duration-200 group">
                                <td class="py-6 px-6">
                                    <a href="/members/<%= member.member_id %>"
                                        class="text-warm-white hover:text-antique-gold font-serif font-medium transition-colors duration-200 flex items-center gap-3 group-hover:translate-x-1">
                                        <i class="fas fa-user-graduate text-antique-gold/60 text-sm"></i>
                                        <div>
                                            <div class="text-lg">
                                                <%= member.first_name %>
                                                    <%= member.last_name %>
                                            </div>
                                            <div class="text-xs text-aged-paper/70">Member #<%= member.member_id %>
                                            </div>
                                        </div>
                                    </a>
                                </td>
                                <td class="py-6 px-4">
                                    <div class="text-aged-paper font-serif">
                                        <div class="flex items-center gap-2">
                                            <i class="fas fa-envelope text-antique-gold/60 text-xs"></i>
                                            <span>
                                                <%= member.email || 'Not provided' %>
                                            </span>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-6 px-4">
                                    <div class="text-aged-paper font-serif">
                                        <div class="flex items-center gap-2">
                                            <i class="fas fa-phone text-antique-gold/60 text-xs"></i>
                                            <span>
                                                <%= member.phone || 'Not provided' %>
                                            </span>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-6 px-4">
                                    <span class="px-4 py-2 rounded-full text-sm font-semibold 
                                        <%= member.membership_type === 'Student' ? 'bg-forest-green/20 text-forest-green border border-forest-green/30' : 
                                            member.membership_type === 'Faculty' ? 'bg-antique-gold/20 text-antique-gold border border-antique-gold/30' : 
                                            'bg-sage-green/20 text-sage-green border border-sage-green/30' %>">
                                        <%= member.membership_type %>
                                    </span>
                                </td>
                                <td class="py-6 px-4">
                                    <span class="px-4 py-2 rounded-full text-sm font-semibold 
                                        <%= member.status === 'Active' ? 'bg-forest-green/20 text-forest-green border border-forest-green/30' : 
                                            'bg-clay-red/20 text-clay-red border border-clay-red/30' %>">
                                        <%= member.status %>
                                    </span>
                                </td>
                                <td class="py-6 px-4">
                                    <div class="flex items-center justify-center gap-3">
                                        <a href="/members/<%= member.member_id %>"
                                            class="p-3 bg-sage-green/20 text-sage-green rounded-lg hover:bg-sage-green hover:text-white transition-all duration-200 hover:-translate-y-0.5"
                                            title="View Profile">
                                            <i class="fas fa-eye text-sm"></i>
                                        </a>
                                        <a href="/members/<%= member.member_id %>/edit"
                                            class="p-3 bg-antique-gold/20 text-antique-gold rounded-lg hover:bg-antique-gold hover:text-espresso transition-all duration-200 hover:-translate-y-0.5"
                                            title="Edit Reader">
                                            <i class="fas fa-edit text-sm"></i>
                                        </a>
                                        <form method="POST" action="/members/<%= member.member_id %>/delete"
                                            onsubmit="return confirmDelete('Are you certain you wish to remove this reader from the registry?')"
                                            class="inline">
                                            <button type="submit"
                                                class="p-3 bg-clay-red/20 text-clay-red rounded-lg hover:bg-clay-red hover:text-white transition-all duration-200 hover:-translate-y-0.5"
                                                title="Remove from Registry">
                                                <i class="fas fa-user-slash text-sm"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
        <% } else { %>
            <!-- Empty Registry State -->
            <div class="text-center py-24 bg-walnut rounded-2xl border-2 border-antique-gold/30 shadow-book">
                <div class="mb-8">
                    <i class="fas fa-address-book text-6xl text-antique-gold/60 mb-4"></i>
                    <h3 class="text-warm-white text-3xl font-bold mb-4 font-serif">The Registry Awaits</h3>
                    <p class="text-aged-paper text-lg font-serif italic max-w-md mx-auto">
                        No readers have been registered yet. Welcome the first scholars to your library.
                    </p>
                </div>
                <a href="/members/create"
                    class="inline-flex items-center gap-3 px-8 py-4 bg-antique-gold text-espresso rounded-xl font-bold font-serif hover:bg-parchment hover:-translate-y-1 transition-all duration-300 shadow-warm text-lg">
                    <i class="fas fa-user-plus"></i>
                    Register First Reader
                </a>
            </div>
            <% } %>
</div>