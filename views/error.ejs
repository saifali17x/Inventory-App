<!-- Library Error Page - Like a Torn Manuscript -->
<div class="flex justify-center items-center min-h-96">
    <div
        class="text-center bg-walnut p-16 rounded-2xl shadow-book border-2 border-rust-red/40 relative overflow-hidden max-w-2xl">
        <!-- Decorative border effect -->
        <div class="absolute inset-0 bg-gradient-to-br from-rust-red/10 to-transparent"></div>
        <div class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-rust-red via-clay-red to-rust-red"></div>

        <div class="relative">
            <i class="fas fa-scroll text-8xl text-rust-red mb-6 opacity-80"></i>
            <h1 class="text-warm-white text-4xl font-bold mb-6 font-serif">A Page Has Been Lost...</h1>
            <div class="bg-deep-walnut/50 p-6 rounded-lg border border-rust-red/30 mb-8">
                <p class="text-parchment text-xl italic font-serif">
                    <%= error %>
                </p>
            </div>
            <a href="/"
                class="inline-flex items-center gap-3 px-8 py-4 bg-antique-gold text-espresso rounded-xl font-bold font-serif hover:bg-parchment hover:-translate-y-1 transition-all duration-300 shadow-warm text-lg">
                <i class="fas fa-home"></i>
                Return to the Library
            </a>
        </div>
    </div>
</div>