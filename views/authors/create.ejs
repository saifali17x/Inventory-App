<!-- Scribe Registration Form -->
<div class="mb-8 lg:mb-8 lg:mb-12">
    <!-- Manuscript Header -->
    <div class="text-center mb-8 lg:mb-8 lg:mb-8 lg:mb-12 relative">
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-antique-gold/20 to-transparent h-px top-1/2">
        </div>
        <div class="relative bg-charcoal px-4 sm:px-6 lg:px-4 sm:px-6 lg:px-8 inline-block">
            <h1
                class="text-warm-white text-2xl sm:text-3xl lg:text-2xl lg:text-4xl font-bold mb-2 lg:mb-4 font-serif tracking-wider">
                <i
                    class="fas fa-user-edit text-antique-gold mr-2 lg:mr-2 lg:mr-4 text-base lg:text-lg sm:text-xl lg:text-2xl"></i>
                <span class="hidden sm:inline">Register New Scribe</span>
                <span class="sm:hidden">New Author</span>
                <i
                    class="fas fa-user-edit text-antique-gold ml-2 lg:ml-2 lg:ml-4 text-base lg:text-lg sm:text-xl lg:text-2xl"></i>
            </h1>
            <p
                class="text-parchment text-xs lg:text-sm sm:text-base lg:text-xs lg:text-sm sm:text-base lg:text-base lg:text-lg italic">
                <span class="hidden sm:inline">Add a master of letters to the registry</span>
                <span class="sm:hidden">Add new author</span>
            </p>
        </div>
    </div>

    <!-- Navigation -->
    <div class="mb-6 lg:mb-8">
        <a href="/authors"
            class="inline-flex items-center justify-center gap-1 lg:gap-2 lg:gap-1 lg:gap-2 lg:p-3 px-3 lg:px-4 py-2 bg-deep-walnut text-aged-paper rounded-lg hover:bg-walnut transition-all duration-200 hover:-translate-y-0.5 border border-antique-gold/30 text-xs lg:text-sm lg:text-base">
            <i class="fas fa-arrow-left"></i>
            <span class="font-serif">
                <span class="hidden sm:inline">Return to Hall of Scribes</span>
                <span class="sm:hidden">Back</span>
            </span>
        </a>
    </div>

    <% if (locals.error) { %>
        <div
            class="bg-clay-red/10 border border-clay-red/30 text-clay-red p-2 lg:p-3 lg:p-4 rounded-lg lg:rounded-lg lg:rounded-xl mb-6 lg:mb-8 flex items-center gap-2 lg:gap-1 lg:gap-2 lg:p-3">
            <i class="fas fa-scroll text-base lg:text-lg lg:text-xl flex-shrink-0"></i>
            <span class="font-serif text-xs lg:text-sm lg:text-base">
                <%= error %>
            </span>
        </div>
        <% } %>

            <!-- Scribe Registry Parchment -->
            <div
                class="bg-walnut rounded-lg lg:rounded-xl lg:rounded-xl lg:rounded-2xl shadow-book border-2 border-antique-gold/30 overflow-hidden">
                <div
                    class="bg-gradient-to-r from-antique-gold/20 via-parchment/10 to-antique-gold/20 px-4 lg:px-4 lg:px-6 py-2 lg:py-3 lg:py-4 border-b border-antique-gold/30">
                    <h2
                        class="text-warm-white font-serif font-bold text-base lg:text-lg lg:text-xl flex items-center gap-2">
                        <i class="fas fa-scroll text-antique-gold"></i>
                        <span class="hidden sm:inline">Scribe Registration Form</span>
                        <span class="sm:hidden">Registration Form</span>
                    </h2>
                </div>

                <form method="POST" action="/authors/create" class="p-4 sm:p-6 lg:p-4 sm:p-6 lg:p-8">
                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 lg:gap-1 lg:gap-2 lg:p-3 sm:gap-4 lg:gap-6">
                        <!-- Personal Details -->
                        <div class="space-y-4 lg:space-y-6">
                            <div>
                                <label for="first_name"
                                    class="block text-parchment font-serif mb-2 text-xs lg:text-xs lg:text-sm uppercase tracking-wider">
                                    <span class="hidden sm:inline">Given Name</span>
                                    <span class="sm:hidden">First Name</span>
                                    <span class="text-clay-red">*</span>
                                </label>
                                <input type="text" id="first_name" name="first_name"
                                    value="<%= locals.formData?.first_name || '' %>" required
                                    class="w-full px-3 lg:px-4 py-2 lg:py-3 bg-deep-walnut border border-antique-gold/30 rounded-lg text-warm-white font-serif focus:border-antique-gold focus:ring-1 focus:ring-antique-gold/30 focus:outline-none transition-all duration-200 text-xs lg:text-sm lg:text-base">
                            </div>

                            <div>
                                <label for="last_name"
                                    class="block text-parchment font-serif mb-2 text-xs lg:text-sm uppercase tracking-wider">
                                    Family Name <span class="text-clay-red">*</span>
                                </label>
                                <input type="text" id="last_name" name="last_name"
                                    value="<%= locals.formData?.last_name || '' %>" required
                                    class="w-full px-3 lg:px-4 py-2 lg:py-3 bg-deep-walnut border border-antique-gold/30 rounded-lg text-warm-white font-serif focus:border-antique-gold focus:ring-1 focus:ring-antique-gold/30 focus:outline-none transition-all duration-200">
                            </div>

                            <div>
                                <label for="nationality"
                                    class="block text-parchment font-serif mb-2 text-xs lg:text-sm uppercase tracking-wider">
                                    Land of Origin
                                </label>
                                <input type="text" id="nationality" name="nationality"
                                    value="<%= locals.formData?.nationality || '' %>"
                                    class="w-full px-3 lg:px-4 py-2 lg:py-3 bg-deep-walnut border border-antique-gold/30 rounded-lg text-warm-white font-serif focus:border-antique-gold focus:ring-1 focus:ring-antique-gold/30 focus:outline-none transition-all duration-200">
                            </div>
                        </div>

                        <!-- Additional Information -->
                        <div class="space-y-6">
                            <div>
                                <label for="birth_year"
                                    class="block text-parchment font-serif mb-2 text-xs lg:text-sm uppercase tracking-wider">
                                    Year of Birth
                                </label>
                                <input type="number" id="birth_year" name="birth_year"
                                    value="<%= locals.formData?.birth_year || '' %>" min="1000" max="2024"
                                    class="w-full px-3 lg:px-4 py-2 lg:py-3 bg-deep-walnut border border-antique-gold/30 rounded-lg text-warm-white font-serif focus:border-antique-gold focus:ring-1 focus:ring-antique-gold/30 focus:outline-none transition-all duration-200">
                            </div>

                            <div>
                                <label for="email"
                                    class="block text-parchment font-serif mb-2 text-xs lg:text-sm uppercase tracking-wider">
                                    Correspondence Address
                                </label>
                                <input type="email" id="email" name="email" value="<%= locals.formData?.email || '' %>"
                                    class="w-full px-3 lg:px-4 py-2 lg:py-3 bg-deep-walnut border border-antique-gold/30 rounded-lg text-warm-white font-serif focus:border-antique-gold focus:ring-1 focus:ring-antique-gold/30 focus:outline-none transition-all duration-200">
                            </div>
                        </div>
                    </div>

                    <!-- Registration Actions -->
                    <div
                        class="flex flex-col sm:flex-row gap-4 justify-center pt-8 border-t border-antique-gold/20 mt-8">
                        <button type="submit"
                            class="inline-flex items-center justify-center gap-1 lg:gap-2 lg:p-3 px-6 lg:px-8 py-3 lg:py-4 bg-antique-gold text-espresso rounded-lg lg:rounded-xl font-bold font-serif hover:bg-parchment transition-all duration-300 shadow-warm hover:-translate-y-1">
                            <i class="fas fa-quill-pen"></i>
                            Register Scribe
                        </button>
                        <a href="/authors"
                            class="inline-flex items-center justify-center gap-1 lg:gap-2 lg:p-3 px-6 lg:px-8 py-3 lg:py-4 bg-deep-walnut text-aged-paper border border-antique-gold/30 rounded-lg lg:rounded-xl font-serif hover:bg-walnut transition-all duration-200">
                            <i class="fas fa-times"></i>
                            Abandon Registration
                        </a>
                    </div>
                </form>
            </div>
</div>