<!-- Library Dashboard with Elegant Manuscript Style -->
<div class="space-y-8 lg:space-y-12">
    <!-- Grand Welcome Header -->
    <div class="text-center mb-8 lg:mb-8 lg:mb-8 lg:mb-16 relative">
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-antique-gold/20 to-transparent h-px top-1/2">
        </div>
        <div class="relative bg-charcoal px-4 sm:px-6 lg:px-4 sm:px-6 lg:px-8 inline-block">
            <h1
                class="text-warm-white text-2xl sm:text-3xl lg:text-3xl lg:text-5xl font-bold mb-2 lg:mb-4 font-serif tracking-wider">
                <i
                    class="fas fa-scroll text-antique-gold mr-2 lg:mr-2 lg:mr-4 text-xl sm:text-2xl lg:text-2xl lg:text-4xl"></i>
                <span class="hidden sm:inline">Library Archives</span>
                <span class="sm:hidden">Archives</span>
                <i
                    class="fas fa-scroll text-antique-gold ml-2 lg:ml-2 lg:ml-4 text-xl sm:text-2xl lg:text-2xl lg:text-4xl"></i>
            </h1>
            <p class="text-parchment text-xs lg:text-sm sm:text-base lg:text-lg lg:text-xl italic">
                <span class="hidden lg:inline">Guardians of Knowledge â€¢ Keepers of Stories</span>
                <span class="lg:hidden">Guardians of Knowledge</span>
            </p>
        </div>
    </div>

    <!-- Library Statistics - Like Illuminated Manuscripts -->
    <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-1 lg:gap-2 lg:p-3 sm:gap-4 lg:gap-6 lg:gap-4 sm:p-6 lg:p-8 mb-8 lg:mb-8 lg:mb-16">
        <!-- Total Books Card -->
        <div
            class="bg-walnut p-4 lg:p-4 sm:p-6 lg:p-8 rounded-lg lg:rounded-xl lg:rounded-xl lg:rounded-2xl shadow-book border-2 border-antique-gold/30 hover:border-antique-gold transition-all duration-500 hover:shadow-warm hover:-translate-y-1 relative overflow-hidden">
            <div
                class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-antique-gold/50 via-parchment to-antique-gold/50">
            </div>
            <div class="flex items-center gap-1 lg:gap-2 lg:p-3 lg:gap-1 lg:gap-2 lg:p-3 sm:gap-4 lg:gap-6">
                <div class="text-3xl lg:text-3xl lg:text-5xl text-antique-gold flex-shrink-0">
                    <i class="fas fa-book-open"></i>
                </div>
                <div class="min-w-0 flex-1">
                    <h3 class="text-2xl lg:text-2xl lg:text-4xl font-bold text-warm-white mb-1 lg:mb-2 font-serif">
                        <%= stats.totalBooks %>
                    </h3>
                    <p
                        class="text-parchment font-medium text-sm lg:text-base tracking-wide uppercase text-xs lg:text-xs lg:text-sm">
                        <span class="hidden sm:inline">Volumes in Collection</span>
                        <span class="sm:hidden">Books</span>
                    </p>
                </div>
            </div>
        </div>

        <!-- Active Members Card -->
        <div
            class="bg-walnut p-4 lg:p-4 sm:p-6 lg:p-8 rounded-lg lg:rounded-xl lg:rounded-xl lg:rounded-2xl shadow-book border-2 border-forest-green/30 hover:border-forest-green transition-all duration-500 hover:shadow-warm hover:-translate-y-1 relative overflow-hidden">
            <div
                class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-forest-green/50 via-sage-green to-forest-green/50">
            </div>
            <div class="flex items-center gap-1 lg:gap-2 lg:p-3 lg:gap-1 lg:gap-2 lg:p-3 sm:gap-4 lg:gap-6">
                <div class="text-3xl lg:text-3xl lg:text-5xl text-forest-green flex-shrink-0">
                    <i class="fas fa-users"></i>
                </div>
                <div class="min-w-0 flex-1">
                    <h3 class="text-2xl lg:text-2xl lg:text-4xl font-bold text-warm-white mb-1 lg:mb-2 font-serif">
                        <%= stats.totalMembers %>
                    </h3>
                    <p
                        class="text-parchment font-medium text-sm lg:text-base tracking-wide uppercase text-xs lg:text-xs lg:text-sm">
                        <span class="hidden sm:inline">Active Scholars</span>
                        <span class="sm:hidden">Members</span>
                    </p>
                </div>
            </div>
        </div>

        <!-- Books Issued Card -->
        <div
            class="bg-walnut p-4 lg:p-4 sm:p-6 lg:p-8 rounded-lg lg:rounded-xl lg:rounded-xl lg:rounded-2xl shadow-book border-2 border-sage-green/30 hover:border-sage-green transition-all duration-500 hover:shadow-warm hover:-translate-y-1 relative overflow-hidden">
            <div
                class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-sage-green/50 via-forest-green to-sage-green/50">
            </div>
            <div class="flex items-center gap-1 lg:gap-2 lg:p-3 lg:gap-1 lg:gap-2 lg:p-3 sm:gap-4 lg:gap-6">
                <div class="text-3xl lg:text-3xl lg:text-5xl text-sage-green flex-shrink-0">
                    <i class="fas fa-hand-holding-heart"></i>
                </div>
                <div class="min-w-0 flex-1">
                    <h3 class="text-2xl lg:text-2xl lg:text-4xl font-bold text-warm-white mb-1 lg:mb-2 font-serif">
                        <%= stats.activeTransactions %>
                    </h3>
                    <p
                        class="text-parchment font-medium text-sm lg:text-base tracking-wide uppercase text-xs lg:text-xs lg:text-sm">
                        <span class="hidden sm:inline">Books on Loan</span>
                        <span class="sm:hidden">On Loan</span>
                    </p>
                </div>
            </div>
        </div>

        <!-- Overdue Books Card -->
        <div
            class="bg-walnut p-4 lg:p-4 sm:p-6 lg:p-8 rounded-lg lg:rounded-xl lg:rounded-xl lg:rounded-2xl shadow-book border-2 border-clay-red/30 hover:border-clay-red transition-all duration-500 hover:shadow-warm hover:-translate-y-1 relative overflow-hidden">
            <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-clay-red/50 via-rust-red to-clay-red/50">
            </div>
            <div class="flex items-center gap-1 lg:gap-2 lg:p-3 lg:gap-1 lg:gap-2 lg:p-3 sm:gap-4 lg:gap-6">
                <div class="text-3xl lg:text-3xl lg:text-5xl text-clay-red flex-shrink-0">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="min-w-0 flex-1">
                    <h3 class="text-2xl lg:text-2xl lg:text-4xl font-bold text-warm-white mb-1 lg:mb-2 font-serif">
                        <%= stats.overdueBooks %>
                    </h3>
                    <p
                        class="text-parchment font-medium text-sm lg:text-base tracking-wide uppercase text-xs lg:text-xs lg:text-sm">
                        <span class="hidden sm:inline">Overdue Returns</span>
                        <span class="sm:hidden">Overdue</span>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Librarian's Quick Actions -->
    <div class="mb-8 lg:mb-8 lg:mb-16">
        <h2
            class="text-xl sm:text-2xl lg:text-xl sm:text-2xl lg:text-3xl font-bold text-warm-white mt-2 mb-6 lg:mb-8 text-center font-serif flex items-center justify-center gap-2 lg:gap-1 lg:gap-2 lg:p-3">
            <i class="fas fa-quill-pen text-antique-gold text-base lg:text-lg sm:text-xl lg:text-2xl"></i>
            <span class="hidden sm:inline">Librarian's Duties</span>
            <span class="sm:hidden">Quick Actions</span>
            <i class="fas fa-quill-pen text-antique-gold text-base lg:text-lg sm:text-xl lg:text-2xl"></i>
        </h2>
        <div
            class="grid grid-cols-2 lg:grid-cols-4 gap-1 lg:gap-2 lg:p-3 sm:gap-4 lg:gap-1 lg:gap-2 lg:p-3 sm:gap-4 lg:gap-6">
            <a href="/books/create"
                class="group bg-deep-walnut p-4 lg:p-4 sm:p-6 lg:p-8 rounded-lg lg:rounded-lg lg:rounded-xl border-2 border-antique-gold/20 hover:border-antique-gold hover:bg-walnut transition-all duration-300 text-center shadow-book hover:shadow-warm hover:-translate-y-2">
                <div
                    class="text-2xl sm:text-3xl lg:text-3xl lg:text-5xl text-antique-gold mb-2 lg:mb-4 group-hover:scale-110 transition-transform duration-300">
                    <i class="fas fa-book-medical"></i>
                </div>
                <span
                    class="text-parchment font-serif text-xs lg:text-sm lg:text-base lg:text-lg font-medium text-sm lg:text-base block">
                    <span class="hidden sm:inline">Add New Volume</span>
                    <span class="sm:hidden">Add Book</span>
                </span>
                <p class="text-aged-paper text-xs lg:text-xs lg:text-sm mt-1 lg:mt-2 hidden sm:block">Catalog a new book
                </p>
            </a>
            <a href="/authors/create"
                class="group bg-deep-walnut p-4 lg:p-4 sm:p-6 lg:p-8 rounded-lg lg:rounded-lg lg:rounded-xl border-2 border-forest-green/20 hover:border-forest-green hover:bg-walnut transition-all duration-300 text-center shadow-book hover:shadow-warm hover:-translate-y-2">
                <div
                    class="text-2xl sm:text-3xl lg:text-3xl lg:text-5xl text-forest-green mb-2 lg:mb-4 group-hover:scale-110 transition-transform duration-300">
                    <i class="fas fa-user-edit"></i>
                </div>
                <span
                    class="text-parchment font-serif text-xs lg:text-sm lg:text-base lg:text-lg font-medium text-sm lg:text-base block">
                    <span class="hidden sm:inline">Register Author</span>
                    <span class="sm:hidden">Add Author</span>
                </span>
                <p class="text-aged-paper text-xs lg:text-xs lg:text-sm mt-1 lg:mt-2 hidden sm:block">Add new writer</p>
            </a>
            <a href="/members/create"
                class="group bg-deep-walnut p-4 lg:p-4 sm:p-6 lg:p-8 rounded-lg lg:rounded-lg lg:rounded-xl border-2 border-sage-green/20 hover:border-sage-green hover:bg-walnut transition-all duration-300 text-center shadow-book hover:shadow-warm hover:-translate-y-2">
                <div
                    class="text-2xl sm:text-3xl lg:text-3xl lg:text-5xl text-sage-green mb-2 lg:mb-4 group-hover:scale-110 transition-transform duration-300">
                    <i class="fas fa-address-card"></i>
                </div>
                <span
                    class="text-parchment font-serif text-xs lg:text-sm lg:text-base lg:text-lg font-medium text-sm lg:text-base block">New
                    Member</span>
                <p class="text-aged-paper text-xs lg:text-xs lg:text-sm mt-1 lg:mt-2 hidden sm:block">Register reader
                </p>
            </a>
            <a href="/categories/create"
                class="group bg-deep-walnut p-4 lg:p-4 sm:p-6 lg:p-8 rounded-lg lg:rounded-lg lg:rounded-xl border-2 border-clay-red/20 hover:border-clay-red hover:bg-walnut transition-all duration-300 text-center shadow-book hover:shadow-warm hover:-translate-y-2">
                <div
                    class="text-2xl sm:text-3xl lg:text-3xl lg:text-5xl text-clay-red mb-2 lg:mb-4 group-hover:scale-110 transition-transform duration-300">
                    <i class="fas fa-bookmark"></i>
                </div>
                <span
                    class="text-parchment font-serif text-xs lg:text-sm lg:text-base lg:text-lg font-medium text-sm lg:text-base block">
                    <span class="hidden sm:inline">New Category</span>
                    <span class="sm:hidden">Category</span>
                </span>
                <p class="text-aged-paper text-xs lg:text-xs lg:text-sm mt-1 lg:mt-2 hidden sm:block">Organize
                    collection</p>
            </a>
        </div>
    </div>

    <!-- Library Chronicles - Recent Activity -->
    <div
        class="grid grid-cols-1 xl:grid-cols-2 gap-1 lg:gap-2 lg:p-3 sm:gap-4 lg:gap-6 lg:gap-12 mb-8 lg:mb-8 lg:mb-16">
        <!-- Recent Transactions Chronicle -->
        <div
            class="bg-walnut p-4 lg:p-4 sm:p-6 lg:p-8 rounded-lg lg:rounded-xl lg:rounded-xl lg:rounded-2xl border-2 border-antique-gold/30 shadow-book relative overflow-hidden">
            <div
                class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-antique-gold/50 via-parchment to-antique-gold/50">
            </div>

            <h2
                class="text-base lg:text-lg lg:text-base lg:text-lg lg:text-2xl font-bold text-warm-white mb-4 lg:mb-6 font-serif flex items-center gap-2 lg:gap-1 lg:gap-2 lg:p-3">
                <i class="fas fa-scroll text-antique-gold"></i>
                <span class="hidden sm:inline">Recent Transactions</span>
                <span class="sm:hidden">Transactions</span>
            </h2>

            <% if (recentTransactions.length> 0) { %>
                <div class="overflow-x-auto -mx-2 lg:mx-0">
                    <table class="w-full min-w-full">
                        <thead>
                            <tr class="border-b border-antique-gold/30">
                                <th
                                    class="text-left py-2 lg:py-3 px-1 lg:px-2 text-parchment font-serif font-semibold text-xs lg:text-sm lg:text-base">
                                    Member</th>
                                <th
                                    class="text-left py-2 lg:py-3 px-1 lg:px-2 text-parchment font-serif font-semibold text-xs lg:text-sm lg:text-base">
                                    Book</th>
                                <th
                                    class="text-left py-2 lg:py-3 px-1 lg:px-2 text-parchment font-serif font-semibold text-xs lg:text-sm lg:text-base hidden sm:table-cell">
                                    Issue Date</th>
                                <th
                                    class="text-left py-2 lg:py-3 px-1 lg:px-2 text-parchment font-serif font-semibold text-xs lg:text-sm lg:text-base hidden md:table-cell">
                                    Due Date</th>
                                <th
                                    class="text-left py-2 lg:py-3 px-1 lg:px-2 text-parchment font-serif font-semibold text-xs lg:text-sm lg:text-base">
                                    Status</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-antique-gold/20">
                            <% recentTransactions.forEach(transaction=> { %>
                                <tr class="hover:bg-deep-walnut/50 transition-colors duration-200">
                                    <td
                                        class="py-2 lg:py-3 px-1 lg:px-2 text-aged-paper text-xs lg:text-sm lg:text-base">
                                        <div class="truncate max-w-24 lg:max-w-none">
                                            <%= transaction.member_first_name %>
                                                <%= transaction.member_last_name %>
                                        </div>
                                    </td>
                                    <td
                                        class="py-2 lg:py-3 px-1 lg:px-2 text-aged-paper text-xs lg:text-sm lg:text-base">
                                        <div class="truncate max-w-32 lg:max-w-none">
                                            <%= transaction.title %>
                                        </div>
                                    </td>
                                    <td
                                        class="py-2 lg:py-3 px-1 lg:px-2 text-aged-paper text-xs lg:text-sm lg:text-base hidden sm:table-cell">
                                        <%= new Date(transaction.issue_date).toLocaleDateString() %>
                                    </td>
                                    <td
                                        class="py-2 lg:py-3 px-1 lg:px-2 text-aged-paper text-xs lg:text-sm lg:text-base hidden md:table-cell">
                                        <%= new Date(transaction.due_date).toLocaleDateString() %>
                                    </td>
                                    <td class="py-2 lg:py-3 px-1 lg:px-2">
                                        <span class="px-2 lg:px-3 py-1 rounded-full text-xs font-semibold 
                                        <%= transaction.status.toLowerCase() === 'issued' ? 'bg-forest-green/20 text-forest-green border border-forest-green/30' : 
                                            transaction.status.toLowerCase() === 'returned' ? 'bg-sage-green/20 text-sage-green border border-sage-green/30' : 
                                            'bg-clay-red/20 text-clay-red border border-clay-red/30' %>">
                                            <span class="hidden sm:inline">
                                                <%= transaction.status %>
                                            </span>
                                            <span class="sm:hidden">
                                                <%= transaction.status.charAt(0).toUpperCase() %>
                                            </span>
                                        </span>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
                <% } else { %>
                    <div class="text-center py-8 lg:py-12">
                        <i class="fas fa-scroll text-3xl lg:text-2xl lg:text-4xl text-aged-paper/50 mb-3 lg:mb-4"></i>
                        <p class="text-aged-paper italic font-serif text-xs lg:text-sm lg:text-base">The transaction
                            ledger is empty</p>
                    </div>
                    <% } %>
        </div>

        <!-- Overdue Books Scroll -->
        <div
            class="bg-walnut p-4 lg:p-4 sm:p-6 lg:p-8 rounded-lg lg:rounded-xl lg:rounded-xl lg:rounded-2xl border-2 border-clay-red/30 shadow-book relative overflow-hidden">
            <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-clay-red/50 via-rust-red to-clay-red/50">
            </div>

            <h2
                class="text-base lg:text-lg lg:text-base lg:text-lg lg:text-2xl font-bold text-warm-white mb-4 lg:mb-6 font-serif flex items-center gap-2 lg:gap-1 lg:gap-2 lg:p-3">
                <i class="fas fa-hourglass-end text-clay-red"></i>
                <span class="hidden sm:inline">Overdue Chronicles</span>
                <span class="sm:hidden">Overdue</span>
            </h2>

            <% if (overdueBooks.length> 0) { %>
                <div class="overflow-x-auto -mx-2 lg:mx-0">
                    <table class="w-full min-w-full">
                        <thead>
                            <tr class="border-b border-clay-red/30">
                                <th
                                    class="text-left py-2 lg:py-3 px-1 lg:px-2 text-parchment font-serif font-semibold text-xs lg:text-sm lg:text-base">
                                    Member</th>
                                <th
                                    class="text-left py-2 lg:py-3 px-1 lg:px-2 text-parchment font-serif font-semibold text-xs lg:text-sm lg:text-base">
                                    Book</th>
                                <th
                                    class="text-left py-2 lg:py-3 px-1 lg:px-2 text-parchment font-serif font-semibold text-xs lg:text-sm lg:text-base">
                                    Days Overdue</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-clay-red/20">
                            <% overdueBooks.forEach(book=> { %>
                                <tr class="hover:bg-deep-walnut/50 transition-colors duration-200">
                                    <td
                                        class="py-2 lg:py-3 px-1 lg:px-2 text-aged-paper text-xs lg:text-sm lg:text-base">
                                        <div class="truncate max-w-24 lg:max-w-none">
                                            <%= book.member_first_name %>
                                                <%= book.member_last_name %>
                                        </div>
                                    </td>
                                    <td
                                        class="py-2 lg:py-3 px-1 lg:px-2 text-aged-paper text-xs lg:text-sm lg:text-base">
                                        <div class="truncate max-w-32 lg:max-w-none">
                                            <%= book.title %>
                                        </div>
                                    </td>
                                    <td class="py-2 lg:py-3 px-1 lg:px-2">
                                        <span
                                            class="text-rust-red font-bold font-serif text-xs lg:text-sm lg:text-base">
                                            <%= book.days_overdue %> days
                                        </span>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
                <% } else { %>
                    <div class="text-center py-8 lg:py-12">
                        <i
                            class="fas fa-check-circle text-3xl lg:text-2xl lg:text-4xl text-forest-green/50 mb-3 lg:mb-4"></i>
                        <p class="text-aged-paper italic font-serif text-xs lg:text-sm lg:text-base">All books returned
                            on time</p>
                    </div>
                    <% } %>
        </div>
    </div>
</div>