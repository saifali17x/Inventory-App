<div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4 mb-8 pb-4 border-b-2 border-medium-brown">
    <h1 class="text-white text-xl sm:text-2xl lg:text-3xl font-bold">All Books</h1>
    <a href="/books/create"
        class="inline-flex items-center justify-center gap-1 lg:gap-2 px-4 lg:px-6 py-2 lg:py-3 bg-medium-green text-white rounded-lg font-medium text-sm lg:text-base hover:bg-dark-green hover:-translate-y-0.5 transition-all duration-300 shadow-lg">
        <i class="fas fa-plus"></i>
        Add New Book
    </a>
</div>

<% if (books.length> 0) { %>
    <div class="bg-card-bg rounded-lg lg:rounded-xl overflow-hidden shadow-xl border border-medium-brown">
        <table class="w-full">
            <thead>
                <tr class="bg-gray-800 border-b border-medium-brown">
                    <th class="px-4 lg:px-4 lg:px-6 py-2 lg:py-3 lg:py-4 text-left font-semibold text-white">Title</th>
                    <th class="px-4 lg:px-4 lg:px-6 py-2 lg:py-3 lg:py-4 text-left font-semibold text-white">Author</th>
                    <th class="px-4 lg:px-4 lg:px-6 py-2 lg:py-3 lg:py-4 text-left font-semibold text-white">Category</th>
                    <th class="px-4 lg:px-4 lg:px-6 py-2 lg:py-3 lg:py-4 text-left font-semibold text-white">Publisher</th>
                    <th class="px-4 lg:px-4 lg:px-6 py-2 lg:py-3 lg:py-4 text-left font-semibold text-white">Year</th>
                    <th class="px-4 lg:px-4 lg:px-6 py-2 lg:py-3 lg:py-4 text-left font-semibold text-white">Available/Total</th>
                    <th class="px-4 lg:px-4 lg:px-6 py-2 lg:py-3 lg:py-4 text-left font-semibold text-white">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% books.forEach(book=> { %>
                    <tr class="border-b border-gray-700 hover:bg-gray-800 transition-colors">
                        <td class="px-4 lg:px-4 lg:px-6 py-2 lg:py-3 lg:py-4">
                            <a href="/books/<%= book.book_id %>"
                                class="text-medium-green hover:text-green-400 font-medium text-sm lg:text-base transition-colors">
                                <%= book.title %>
                            </a>
                        </td>
                        <td class="px-4 lg:px-4 lg:px-6 py-2 lg:py-3 lg:py-4 text-text-light">
                            <%= book.first_name %>
                                <%= book.last_name %>
                        </td>
                        <td class="px-4 lg:px-4 lg:px-6 py-2 lg:py-3 lg:py-4">
                            <span
                                class="inline-block px-3 py-1 text-xs lg:text-sm font-medium text-sm lg:text-base rounded-full bg-medium-brown text-white">
                                <%= book.category_name %>
                            </span>
                        </td>
                        <td class="px-4 lg:px-4 lg:px-6 py-2 lg:py-3 lg:py-4 text-text-light">
                            <%= book.publisher_name %>
                        </td>
                        <td class="px-4 lg:px-4 lg:px-6 py-2 lg:py-3 lg:py-4 text-text-light">
                            <%= book.publication_year || 'N/A' %>
                        </td>
                        <td class="px-4 lg:px-4 lg:px-6 py-2 lg:py-3 lg:py-4">
                            <span
                                class="<%= book.copies_available > 0 ? 'text-green-400' : 'text-red-400' %> font-medium text-sm lg:text-base">
                                <%= book.copies_available %>/<%= book.total_copies %>
                            </span>
                        </td>
                        <td class="px-4 lg:px-4 lg:px-6 py-2 lg:py-3 lg:py-4">
                            <div class="flex gap-2">
                                <a href="/books/<%= book.book_id %>"
                                    class="px-3 py-2 text-xs lg:text-sm bg-medium-green text-white rounded-md hover:bg-dark-green transition-colors">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="/books/<%= book.book_id %>/edit"
                                    class="px-3 py-2 text-xs lg:text-sm bg-light-brown text-white rounded-md hover:bg-yellow-700 transition-colors">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="POST" action="/books/<%= book.book_id %>/delete"
                                    onsubmit="return confirmDelete('Are you sure you want to delete this book?')"
                                    class="inline">
                                    <button type="submit"
                                        class="px-3 py-2 text-xs lg:text-sm bg-medium-red text-white rounded-md hover:bg-dark-red transition-colors">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
    <% } else { %>
        <div class="text-center py-12 text-text-muted">
            <i class="fas fa-book text-2xl lg:text-4xl lg:text-6xl mb-4 opacity-50"></i>
            <h3 class="text-base lg:text-lg lg:text-2xl font-bold text-white mb-2">No books found</h3>
            <p class="text-base lg:text-lg mb-8">Add books to start building your library catalog.</p>
            <a href="/books/create"
                class="inline-flex items-center justify-center gap-1 lg:gap-2 px-4 lg:px-6 py-2 lg:py-3 bg-medium-green text-white rounded-lg font-medium text-sm lg:text-base hover:bg-dark-green hover:-translate-y-0.5 transition-all duration-300">Add
                First Book</a>
        </div>
        <% } %>